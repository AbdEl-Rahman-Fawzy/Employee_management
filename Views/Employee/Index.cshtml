@model IEnumerable<edu.Models.Employee>

@{
    ViewData["Title"] = "Employee Management";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <!-- Navigation Menu -->
        <nav class="nav nav-pills">
            <a class="nav-link" href="@Url.Action("DisplayEmployees", "Employee")">Display Employees</a>
            <a class="nav-link" href="@Url.Action("AddEmployee", "Employee")">Add Employee</a>
            <a class="nav-link" href="@Url.Action("EditEmployee", "Employee")">Edit Employee</a>
            <a class="nav-link" href="@Url.Action("SearchEmployee", "Employee")">Search Employee</a>
            <a class="nav-link" href="@Url.Action("DeleteEmployee", "Employee")">Delete Employee</a>

        </nav>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
